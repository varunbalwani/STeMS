<body>
    <%- include('../partials/navbarStudent') %> 
    <main class="container mt-5">
        <%- include('../partials/flash')%>
<div class="row" style="font-family: consolas;">
    <h1 class="text-center" style="color: rgb(255, 255, 255) ;
    -webkit-text-fill-color: rgb(255, 255, 255) ;">Add Complaint</h1>
    <div class="col-6 offset-3">
        <form action="/student/complaints/new" method="POST" >
            <div class="mb-3">
                <label class="form-label" for="topic" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Topic</label>
                <input class="form-control" type="text" id="topic" name="topic" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="details" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Complaint</label>
                <textarea class="form-control" type="text" id="details" name="details"  rows="5" cols="90" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>      
            <button class="mb-3 btn btn-success">Submit</button>
        </form>
    </div>
</div>    
</main>
</body>
