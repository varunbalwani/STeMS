<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>new Notice</title>
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
          background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),url('https://images.pexels.com/photos/251225/pexels-photo-251225.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: cover;
        }
        </style>
</head>
<body>
    <%- include('../partials/navbarTeacher') %> 
    <main class="container mt-5">
        <%- include('../partials/flash')%>
<div class="row" style="font-family: consolas;">
    
    <h1 class="text-center" style="color: rgb(255, 255, 255) ;
    -webkit-text-fill-color: rgb(255, 255, 255) ;">Add Notice</h1>
    <div class="col-6 offset-3">
        <form action="/teacher/notices/new" method="POST" >
            <div class="mb-3">
                <label class="form-label" for="details" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Notice</label>
                <textarea class="form-control" type="text" id="details" name="details"  rows="5" cols="90" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>      
            <button class="mb-3 btn btn-success">Submit</button>
        </form>
        <% notices.forEach(function(notice){ %>
            <div class="card mb-3 ">
				<div class="card-body">
					<h4><strong ><%= notice.author.subject%></strong></h4>
					<h6>Submitted by: <%= notice.author.name%></h6>
                    <h6 class="text-muted "  ><%=notice.time%></h6>
					<br>
                    <h4 class="card-text">  <%= notice.details %> </h4>
                        <% if(currentUser && (notice.author.id.equals(currentUser._id))){ %>
                            <a class="btn btn-sm btn-warning text-white" href="/teacher/notices/<%=notice._id%>/edit">Edit</a>
                            <form id="delet-form" class="d-inline" action="/teacher/notices/<%=notice._id%>?_method=DELETE" method="POST" >
                                <button class="btn btn-sm btn-danger ">Delete</button>
                            </form>
                        <% } %>
				</div>
			</div>
        <% }); %>
    </div>
</div>    
</main>
</body>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
          integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
          crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
          integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
          crossorigin="anonymous"></script>

</html>